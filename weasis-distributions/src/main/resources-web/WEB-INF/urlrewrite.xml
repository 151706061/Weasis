<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE urlrewrite PUBLIC "-//tuckey.org//DTD UrlRewrite 4.0//EN"
        "http://www.tuckey.org/res/dtds/urlrewrite4.0.dtd">

<!-- Configuration file for UrlRewriteFilter http://www.tuckey.org/urlrewrite/ -->
<urlrewrite>

	<rule>
		<note>
			Any "/weasis-launcher${profile.suffix}.jar" download Request will be redirected to "weasis-launcher.jar" file
		</note>

		<from>^/weasis-launcher(.+)\.jar$</from>
		<set type="response-header" name="Cache-Control">no-cache, must-revalidate</set>
		<set type="response-header" name="Pragma">no-cache</set>
		<to type="redirect">%{context-path}/weasis-launcher.jar</to>
	</rule>
	<rule>
		<note>
			Any "/weasis-launcher${profile.suffix}.jar" download Request will be redirected to "weasis-launcher.jar.pack.gz" file
		</note>

		<from>^/weasis-launcher(.+)\.jar.pack.gz$</from>
		<set type="response-header" name="Cache-Control">no-cache, must-revalidate</set>
		<set type="response-header" name="Pragma">no-cache</set>
		<to type="redirect">%{context-path}/weasis-launcher.jar.pack.gz</to>
	</rule>
	
    <rule>
        <from>^/felix(.+)\.jar.*</from>
		<set type="response-header" name="Cache-Control">no-cache, must-revalidate</set>
		<set type="response-header" name="Pragma">no-cache</set>
    </rule>
    <rule>
        <from>^/substance(.+)\.jar.*</from>
		<set type="response-header" name="Cache-Control">no-cache, must-revalidate</set>
		<set type="response-header" name="Pragma">no-cache</set>
    </rule>
</urlrewrite>

